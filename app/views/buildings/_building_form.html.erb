

<%= form_for @building do |f| %>
    <%= f.label :name, "Building Name" %>
    <%= f.text_field :name %><br>
    <%= f.label :country %>
    <%= f.text_field :country %><br>
    <%= f.label :address %>
    <%= f.text_field :address %><br>
    <%= f.label :rent_per_floor %>
    <%= f.number_field :rent_per_floor, min: 0 %><br>
    <%= f.label :number_of_floors %>
    <%= f.number_field :number_of_floors, min: 0, step: 1 %><br>
    <%= f.submit %>
<% end %> 